<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/g_gesture_progress_layout"
    android:layout_width="100dp"
    android:layout_height="80dp"
    android:layout_centerInParent="true"
    android:background="@drawable/g_palyer_black_bg"
    android:gravity="center"
    android:visibility="visible">

    <ImageView
        android:id="@+id/g_gesture_iv_progress"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:layout_centerHorizontal="true"
        android:src="@drawable/g_player_forward" />

    <TextView
        android:id="@+id/g_gesture_tv_progress_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/g_gesture_iv_progress"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="4dp"
        android:gravity="right"
        android:text="00:00 / 00:00"
        android:textColor="#ffececec"
        android:textSize="12sp" />
</RelativeLayout>